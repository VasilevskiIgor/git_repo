{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Chrome with Live Server",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:5500", // Default Live Server URL
        "webRoot": "${workspaceFolder}",
        "sourceMaps": true,
        "runtimeArgs": [
          "--remote-debugging-port=9222"
        ],
        "preLaunchTask": "Start Live Server" // Optional: Automatically start Live Server
      }
    ]
  }